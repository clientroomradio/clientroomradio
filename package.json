{
  "name": "clientroomradio",
  "description": "A collaborative radio experience for hearts and minds",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "argparse": "^1.0.10",
    "body-parser": "^1.19.0",
    "bootstrap-slider": "^10.6.2",
    "cli-interact": "^0.1.9",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "http-proxy": "^1.18.0",
    "jplayer": "^2.9.2",
    "jquery.cookie": "^1.4.1",
    "lastfm": "^0.9.3",
    "node-uuid": "^1.4.8",
    "request": "^2.88.2",
    "sockjs": "^0.3.20",
    "sockjs-client": "^1.4.0",
    "throttle": "^1.0.3",
    "through2": "^3.0.1",
    "winston": "^3.2.1",
    "ytdl-core": "^2.0.1"
  },
  "devDependencies": {
    "angular": "^1.7.9",
    "angular-mocks": "^1.7.9",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "eslint": "^6.8.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^7.1.1",
    "puppeteer": "^2.1.1"
  },
  "scripts": {
    "build": "npm run-script build-ccr && npm run-script build-jplayer && npm run-script build-sockjs && npm run-script build-jquery.cookie && npm run-script build-bootstrap-slider",
    "build-ccr": "babel --minified src/js -d static/js",
    "build-jplayer": "cp node_modules/jplayer/dist/jplayer/jquery.jplayer.min.js static/js/lib",
    "build-sockjs": "cp node_modules/sockjs-client/dist/sockjs.min.js static/js/lib",
    "build-jquery.cookie": "babel --minified node_modules/jquery.cookie/jquery.cookie.js -d static/js/lib",
    "build-bootstrap-slider": "cp node_modules/bootstrap-slider/dist/bootstrap-slider.min.js static/js/lib",
    "postinstall": "npm run build",
    "test": "npm run-script test-lint && npm run-script test-node && npm run-script test-browser",
    "test-lint": "eslint .",
    "test-node": "mocha --exit",
    "test-browser": "karma start"
  },
  "bin": {
    "crr-run": "./bin/app.js",
    "crr-setup": "./bin/setup.js"
  }
}
